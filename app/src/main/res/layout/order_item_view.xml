<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_3sdp"
    android:paddingRight="@dimen/_5sdp"
    android:paddingTop="@dimen/_12sdp"
    android:paddingBottom="@dimen/_12sdp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_5sdp">

            <ImageView
                android:id="@+id/img_vag"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/veg"
                android:layout_marginRight="@dimen/_5sdp"/>

            <ImageView
                android:id="@+id/img_non_veg"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/non_veg"
                android:visibility="gone"
                android:padding="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_3sdp"/>

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                android:textSize="@dimen/_12sdp"
                android:paddingRight="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tv_total_payable_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 0"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" >
                <TextView
                    android:id="@+id/tv_customization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customization : Mayo"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:visibility="visible"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:id="@+id/tv_cooking_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cooking_instruction_make_it_spice"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/_10sdp"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/dark_gray"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty:1"
                android:textSize="@dimen/_11sdp"
                android:gravity="bottom"
                android:scaleType="fitEnd"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
